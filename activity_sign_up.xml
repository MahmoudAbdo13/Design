<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="wait.waitapp.wait.ui.auth.SignUpActivity">

    <TextView
        android:id="@+id/signup_lets_stared"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="@dimen/_110sdp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginHorizontal="12dp"
        android:gravity="center"
        android:text="Let's Get Started"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signup_first_account"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:text="Create a Wait Account to continue"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_lets_stared" />

    <Button
        android:id="@+id/signup_google_sign_in"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="@dimen/_49sdp"
        android:background="@drawable/google_button"
        android:drawableLeft="@drawable/ic_google"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingHorizontal="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Continue with Google"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_first_account" />

    <Button
        android:id="@+id/signup_facebook_sign_in"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/facebook_button"
        android:drawableLeft="@drawable/ic_facebook"
        android:drawablePadding="@dimen/_9sdp"
        android:ellipsize="end"
        android:paddingHorizontal="16dp"
        android:singleLine="true"
        android:text="Continue with Facebook"
        android:textAllCaps="false"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_google_sign_in" />

    <TextView
        android:id="@+id/signup_or"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="34dp"
        android:gravity="center"
        android:text="Or"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_facebook_sign_in" />

    <Button
        android:id="@+id/signup_goTo_sign_in"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="@dimen/_27sdp"
        android:background="@drawable/google_button"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_or" />

    <TextView
        android:id="@+id/signup_privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginBottom="34dp"
        android:gravity="center_horizontal"
        android:text="By signing up your agree to First Terms of Use, to get email &amp; updates, and you acknowledge that you have to read our Privacy Policy"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_goTo_sign_in"
/>


</androidx.constraintlayout.widget.ConstraintLayout>